{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "author": "Canciller",
  "description": "",
  "license": "ISC",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "start:dev": "NODE_ENV=development ts-node -r tsconfig-paths/register ./src",
    "start:prod": "NODE_ENV=production ts-node -r tsconfig-paths/register --project ./tsconfig.prod.json ./src",
    "watch:dev": "nodemon -q --watch src --ext ts --exec \"npm run start:dev\"",
    "watch:prod": "nodemon -q --watch src --ext ts --exec \"npm run start:prod\"",
    "typecheck": "tsc --noEmit",
    "build:dev": "npm run clean:dev && tsc",
    "build:prod": "npm run clean:prod && tsc --project ./tsconfig.prod.json",
    "build": "npm-run-all build:dev build:prod",
    "clean:dev": "rimraf ./build/Debug",
    "clean:prod": "rimraf ./build/Release",
    "clean": "rimraf ./build"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "concurrently": "^7.0.0",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4"
  }
}
